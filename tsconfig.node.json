{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "CommonJS",
		"strict": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": ["ESNext"],
		"skipLibCheck": true,
		"noEmit": true,
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"lib": ["esnext", "scripthost"],
	"include": ["packages/**/*.ts", "packages/**/*.d.ts"],
	"exclude": ["dist", "**/*.js", "node_modules"]
	// "ts-node": {
	// 	"compilerOptions": {
	// 		"module": "CommonJS"
	// 	}
	// }
}
